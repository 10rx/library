{
    "compilerOptions": {
      "declaration": true,      
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "rootDir": "src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "automatedtests/*","dist"],
    "paths": {
      "apiModel/*": ["apiModel/*"],
      "classes/*": ["classes/*"],
      "exceptions/*": ["exceptions/*"],
      "includes/*": ["includes/*"],
      "types/*": ["types/*"],
    }
}